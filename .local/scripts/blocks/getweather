#!/bin/bash
w="$(curl -s https://wttr.in/${CITY}?format=%h+%t'\n'%c 2> /dev/null \
    | sed "s/.*â˜€.*/ó°–™/;s/.*â˜.*/ó°–,/;s/.*â›….*/ó°–•/;s/.*â›ˆ.*/ó°™¾/;s/.*âœ¨.*/î°/;s/.*â„.*/ó°œ—/;s/.*ğŸŒ¦.*/ó°¼³/;s/.*ğŸŒ§.*/ó°–—/;s/.*ğŸŒ¨.*/ó°–˜/;s/.*ğŸŒ©.*/ó°–“/;s/.*ğŸŒ«.*/ó°–‘/" \
    | tr '\n' ' ')"
if [ $(echo "$w" | wc -c) -gt 15 ] || [ -z "$w" ]; then exit; else echo "$w";fi;exit
